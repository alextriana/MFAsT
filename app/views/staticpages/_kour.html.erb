<div class="popup_box" id="popup_box">
     <div id="form-popup">
      <div style="float:left; width:420px; margin-left:30px">
          <div class="header-large white"><strong>Want to be a beta tester?</strong></h1>
         </div> 
         <br>
       </div>
      <div style = "float:right; width:50px;">
        <a class="btn btn-medium btn-danger icon-remove"  id="beta-no"></a>
      </div>
      <%= form_for(@betaUser, :remote => true, url:{action:"create", controller:"beta_users"}) do |f| %>
          <div class="span6">
             <%= f.text_field :name, :class=>'subscribe', placeholder:"Your Name"%>
              <%= f.text_field :email, placeholder:"Your Email", :class=>'subscribe' %>
              <%= f.text_field :institution, placeholder:"Your Clinic Address", :class=>'subscribe'%>
             
          
          <button type="submit" id='submit-beta' style="background-image:url('assets/buttons/blue_button.png'); height:67px; width:260px;">
              <p class="header-small white" style="font-size:20pt; font-weight:bold; text-align:center; padding-top:10px">Get the beta</p>
           
          <%end%>
        </div>
      </div>



        <div id="popup-submission" style="display:none">
          
          <div style="float:left; width:420px; margin-left:30px">
            <div class="header-large white"><strong>Thanks for signing up! We'll be in contact soon.</strong></h1>
            </div> 
            <br>
            <br>
         <div id='close-beta' style="background-image:url('assets/buttons/red_button.png'); height:67px; width:260px;">
              <p class="header-small white" style="font-size:20pt; font-weight:bold; text-align:center; padding-top:10px">Return to site</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
